<%= form_tag search_action_url(controller: :catalog), :method => :get, :class => 'search-query-form form-inline clearfix navbar-form' do %>
  <%= render_hash_as_hidden_fields(params_for_search().except(:q, :search_field, :qt, :page, :utf8)) %>
  <div class="text-field-with-icons">
    <div class="input-group">
      <ul class="search-icons-list">
        <li>
          <a title="<%= t ('ddf.search.form.question_icon_text_hover') %>" id="toggle-search-syntax" href="#">
            <i class="glyphicon glyphicon-question-sign"></i>
          </a>
        </li>
        <li>
          <a title="<%= t ('ddf.search.form.clear_icon_text_hover') %>" id="search-clear" href="#">
            <i class="glyphicon glyphicon-remove-circle"></i>
          </a>
        </li>
      </ul>

      <label for="q" class="sr-only"><%= t('blacklight.search.form.q') %></label>
      <%= text_field_tag :q, params[:q], :placeholder => t('blacklight.search.form.q'), :class => "search_q q form-control", :id => "q", :autofocus => should_autofocus_on_search_box?, autocomplete: 'off', data: { autocomplete_enabled: true, autocomplete_path: '/suggest' }
       %>
    </div>

    <button type="submit" class="btn btn-primary search-btn" id="search">
      <span class="submit-search-text"><%=t('blacklight.search.form.submit')%></span>
      <span class="glyphicon glyphicon-search"></span>
    </button>
  </div>
<% end %>
<%= render 'catalog/search_help' %>
