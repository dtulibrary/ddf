<%= form_for @message, url: contact_path do |message_form| %>
  <fieldset>
    <ul class="feedback-fields-list">
      <li> <%= message_form.text_field :name, placeholder: "Name" %> </li>
      <li> <%= message_form.email_field :email, placeholder: "Email"%> </li>
      <li> <%= message_form.text_area :content, placeholder: "Message"%> </li>
    </ul>
  </fieldset>
  <fieldset>
    <div class="submit-panel">
      <%= message_form.submit "Send" %>
    </div>
  </fieldset>
<% end %>
