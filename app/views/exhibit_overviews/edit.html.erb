<%= render 'spotlight/shared/exhibit_sidebar' %>
<div id="content" class="col-md-9 exhibit-admin">

<h1>Edit Overview</h1>
  <%= bootstrap_form_for @overview, layout: :horizontal, label_col: 'col-md-3', control_col: 'col-md-9', html: {class: "row"} do |f| %>
    <div class="row col-md-12">
      <%= f.text_field  :institution %>
      <%= f.text_field  :research_area %>
      <%= f.text_field  :contact_details %>
      <%= f.hidden_field :exhibit_id %>
      <div class="form-actions">
        <div class="primary-actions">
          <%= f.submit nil, class: 'btn btn-primary' %>
        </div>
    </div>
    </div>
  <% end %>
</div>
