<div class="header__wrapper">
  <div class="container container--searchbox">
    <div class="row">
      <div class="col-md-8">
        <%= render_search_bar %>
      </div>


    </div>
    <div class="row">
      <div class="col-md-8">
        <% if current_exhibit %>
        <ul class="nav navbar-nav spotlight-nav">
          <li class="<%= "active" if current_page?(current_exhibit) %>">
            <%= link_to t(:'spotlight.curation.nav.home'), current_exhibit %>
          </li>
          <% current_exhibit.main_navigations.displayable.each do |navigation| %>
          <% next if navigation.nav_type == 'browse' %>
            <%= render partial: "shared/#{navigation.nav_type}_navbar", locals: { navigation: navigation } %>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="col-md-4">
      <% if within_spotlight? %>
        <%= render partial: 'spotlight/search_links' %>
      <% else %>
      <%= render :partial=>'/user_search_links' %>
      <% end %>
    </div>
    </div>
  </div>
</div>
