<article role="main">
  <div class="intro">
    <div class="container">
      <p class="pitch measure"> <%= t('blacklight.elevator_pitch')%> </p>
      <p class="news">
        <em class="news-tag"><%= t('blacklight.news_tag')%></em>
        <%= t('blacklight.news_content')%>
      </p>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-6 chart">
        <section>
          <h1 class="chart-heading">
            <%= t("blacklight.data_visualization.publications") %>
            <em><%= t("blacklight.data_visualization.by") %></em>
            <%= t("blacklight.data_visualization.type") %>
          </h1>
          <ul class="chartlist">
            <% @types.each do |facet| %>
            <li>
              <%= render_link_to(facet) %>
              <%= render_count_for(facet) %>
              <%= render_percentage_for(facet) %>
            </li>
            <% end %>
          </ul>
        </section>
      </div>

      <div class="col-md-6 chart">
        <section>
          <h1 class="chart-heading">
            <%= t("blacklight.data_visualization.publications") %>
            <em><%= t("blacklight.data_visualization.by") %></em>
            <%= t("blacklight.data_visualization.institution") %>
          </h1>
          <ul class="chartlist">
            <% @institutions.each do |facet| %>
            <li>
              <%= render_link_to(facet) %>
              <%= render_count_for(facet) %>
              <%= render_percentage_for(facet) %>
            </li>
            <% end %>
          </ul>
        </section>
      </div>
    </div>
  </div>
</article>
