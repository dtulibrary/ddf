<article role="main">
  <div class="container">
    <div class="row">

      <div class="col-md-6 chart">
        <section>
          <h1 class="chart-segment-heading">
            <%= t("blacklight.data_visualization.publication_statistics") %>
          </h1>
          <h2 class="chart-heading"><%= t("blacklight.data_visualization.by_institution") %></h2>
          <ul class="chartlist institutions">
            <% @institutions.each do |facet| %>
            <li>
              <%= render_facet_link(facet) %>
              <%= display_facet_count(facet) %>
              <%= render_percentage_for(facet) %>
            </li>
            <% end %>
          </ul>
          <p class="more-link"><%= link_to(t("blacklight.data_visualization.more_statistics"), search_statistics_path) %></p>
        </section>
      </div>

      <div class="col-md-6 chart">
        <section class="segmented-chart">
          <h1 class="chart-segment-heading">
            <!-- <i class="ai ai-open-access ai-3x"></i> -->
            <%= t("blacklight.data_visualization.oa_indicator") %>
          </h1>

          <h2 class="chart-heading"><%= t("blacklight.data_visualization.national") %></h2>
          <ul class="chartlist types">
            <% @national_segments.each do |segment| %>
            <li>
              <%= render_segment_link(segment) %>
              <%= render_segment_count(segment) %>
              <%= render_percentage_for(segment) %>
            </li>
            <% end %>
          </ul>

          <h2 class="chart-heading"><%= t("blacklight.data_visualization.by_university") %></h2>
          <ul class="chartlist types">
            <% @university_segments.each do |segment| %>
            <li>
              <%= render_segment_link(segment) %>
              <%= render_segment_count(segment) %>
              <%= render_percentage_for(segment) %>
            </li>
            <% end %>
          </ul>
          <p class="more-link more-link--oa"><%= link_to(t("blacklight.data_visualization.more_oa"), open_access_path) %></p>
        </section>
      </div>

    </div>
  </div>

  <footer class="intro">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <p class="pitch"> <%= t('blacklight.elevator_pitch')%> </p>
        </div>

        <div class="col-md-8 col-md-offset-2">
          <% unless latest_update.nil? %>
            <p class="news">
              <em class="news-tag"><%= t('ddf.news.title')%></em>
              <%= latest_update %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </footer>
</article>
