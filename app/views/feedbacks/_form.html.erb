<%= form_tag feedback_path, :remote => request.xhr? do %>
  <%= label_tag 'message', "#{t 'toshokan.feedback.message_html'} <b class=\"dtu-red\">*</b>".html_safe %>
  <%= text_area_tag 'message', message, :tabindex => 1 %>
  <%= label_tag 'name', t('toshokan.feedback.name_html') %>
  <%= text_field_tag 'name', name, :tabindex => 2 %>
  <%= label_tag 'email', "#{t 'toshokan.feedback.email_html'} <b class=\"dtu-red\">*</b>".html_safe %>
  <%= text_field_tag 'email', email, :tabindex => 3 %>
  <div style="margin: 10px 0px;">
    <%= t 'toshokan.forms.required_fields_html' %>
  </div>
  <%= button_tag t('toshokan.forms.send'), :class => 'btn btn-primary', :tabindex => 4 %>
<% end %>
